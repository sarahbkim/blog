<h1>New Posts</h1>
<section id='intro'> 

<%= form_for :post, url: admin_posts_path do |f| %> 

   <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.cktext_area :text, :ckeditor => { :language => "usa" } %>  
  </p>
 
 <p> 
  <%= f.label :meta_title %><br> 
  <%= f.text_field :meta_title %> 
  </p>

  <p>
  <%= f.label :meta_desc %> <br> 
  <%= f.text_area :meta_desc %> 
  </p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', admin_posts_path %> 
</section>
